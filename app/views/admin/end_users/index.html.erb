<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="application.scss">
    </head>
    <body>
        <div class="container">
            <h1>会員一覧</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="admin-index-table white">会員ID</th>
                        <th class="admin-index-table white">氏名</th>
                        <th class="admin-index-table white">メールアドレス</th>
                        <th class="admin-index-table white">ステータス</th>
                    </tr>
                </thead>
                <tbody>
                <% @end_users.each do |end_user| %>
                    <tr>
                        <th><%= end_user.id %></th>
                        <td><%= end_user.last_name %><%= end_user.first_name %></td>
                        <td><%= end_user.email %></td>
                        <td>
                            <% if end_user.deleted_at %>
                                <p>無効</p>
                            <% else %>
                                <p>有効</p>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </body>
</html>