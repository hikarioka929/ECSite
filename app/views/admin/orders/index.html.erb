<h1>注文履歴一覧</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="admin-index-table white">購入日時</th>
            <th class="admin-index-table white">購入者</th>
            <th class="admin-index-table white">注文個数</th>
            <th class="admin-index-table white">注文ステータス</th>
            <th class="admin-index-table white"></th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.to_s(:datetime_jp) %></td>
                <td><%= order.end_user.last_name %><%= order.end_user.first_name %></td>
                <td><%= order.item_count %></td>
                <td>
                    <% if order.order_status == 0 %>
                        入金待ち
                    <% elsif order.order_status == 1 %>
                        入金確認
                    <% elsif order.order_status == 2 %>
                        製作中
                    <% elsif order.order_status == 3 %>
                        発送準備中
                    <% elsif order.order_status == 4 %>
                        発送済み
                    <% end %>
                </td>
                <td><%= link_to "詳細", admin_order_path(order), class: "btn btn-info" %></td>
            </tr>
        <% end %>
    </tbody>
</table>